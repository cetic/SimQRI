<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="be.cetic.simqri.menu.commands.category">
      </category>
      <command
            name="New simulation"
            categoryId="be.cetic.simqri.menu.commands.category"
            id="be.cetic.simqri.menu.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="be.cetic.simqri.menu.commands.sampleCommand"
            class="be.cetic.simqri.menu.handlers.MenuHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="be.cetic.simqri.menu.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="SimQRi"
               mnemonic="M"
               id="be.cetic.simqri.menu.menus.sampleMenu">
            <command
                  commandId="be.cetic.simqri.menu.commands.sampleCommand"
                  mnemonic="S"
                  id="be.cetic.simqri.menu.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="be.cetic.simqri.menu.toolbars.sampleToolbar">
            <command
                  commandId="be.cetic.simqri.menu.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip=""
                  id="be.cetic.simqri.menu.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
